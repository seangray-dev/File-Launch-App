{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../dist"
	},
	"package": {
		"productName": "filelaunch",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"clipboard": {
				"writeText": true
			},
			"dialog": {
				"confirm": true,
				"open": true
			},
			"fs": {
				"copyFile": true,
				"createDir": true,
				"exists": true,
				"readFile": true,
				"writeFile": true,
				"readDir": true,
				"scope": {
					"allow": [
						"$APPDATA/**",
						"$APPLOG/*",
						"$APPLOG/*/**",
						"$DESKTOP",
						"$DESKTOP/**",
						"$DESKTOP/*/**"
					],
					"requireLiteralLeadingDot": false
				}
			},
			"path": {
				"all": true
			},
			"shell": {
				"open": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.tauri.dev",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": "default-src data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"width": 800,
				"height": 600,
				"minWidth": 800,
				"minHeight": 600,
				"title": "File Launch",
				"center": true,
				"fileDropEnabled": true,
				"fullscreen": false,
				"hiddenTitle": true,
				"resizable": true
			}
		]
	}
}
